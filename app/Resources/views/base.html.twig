<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
        <title>{% block title %}Form Builder{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/fontawesome.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/main.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <nav class="navbar fixed-top navbar-expand-lg navbar-light navbar-dark bg-dark">
            <a class="navbar-brand" href="{{ path('homepage') }}"><img src="{{ asset('assets/img/logo.png') }}" alt="Field Interactive"></a>
            <div class="collapse navbar-collapse justify-content-end container">
                <ul class="navbar-nav">
                {% block nav %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('admin') }}">Alle Formular Builder</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('builder') }}">Neuer Formular Builder</a></li>
                {% endblock %}
                </ul>
            </div>
        </nav>
        <main class="container">
            <div id="alert_placeholder"></div>
            {% for flash_message in app.session.flashBag.get('success') %}
                <div class="flash-notice alert alert-success fade show">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% block body %}{% endblock %}
        </main>
        {% block javascripts %}
            <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
            <script src="{{ asset('assets/js/jquery-ui.min.js') }}"></script>
            <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
