{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Felder</th>
                    <th colspan="3">Aktionen</th>
                </tr>
            </thead>
            <tbody>
                {% for builder in builders %}
                    <tr>
                        <td>
                            {{ builder.name }}
                        </td>
                        <td>
                            {% for array in builder.json %}
                                {{ array.label }}{% if not loop.last %},{% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            <a href="{{ path('getForm', {'id': builder.id}) }}" class="btn btn-primary" title="Anzeigen"><i class="fas fa-eye"></i></a>
                        </td>
                        <td>
                            <a href="{{ path('builderForm', {'id': builder.id}) }}" class="btn btn-primary" title="Bearbeiten"><i class="fas fa-edit"></i></a>
                        </td>
                        <td>
                            <a href="{{ path('builderFormValues', {'id': builder.id}) }}" class="btn btn-primary" title="Werte"><i class="fas fa-list-ul"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
