{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <table cellpadding="10">
            <thead>
                <tr>
                    <th>ID</th>
                    {% for label in fields.label %}
                        <th>{{ label }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for valueObject in values %}
                    <tr>
                        <td><a href="{{ path('getValue', {'id': valueObject.id}) }}">{{ valueObject.id }}</a></td>
                        {% for field in fields.name %}
                            {% set value = attribute(valueObject.json, field) is defined ? attribute(valueObject.json, field) : '' %}
                            <td>{% if value is iterable %}{{ value|join(', ') }}{% else %}{{ value }}{% endif %}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
